# Google C++ Style Guide Formatting
# Reference: https://google.github.io/styleguide/cppguide.html

Language: Cpp
BasedOnStyle: Google

# Indentation & Spacing
IndentWidth: 2
TabWidth: 2
UseTab: Never
ContinuationIndentWidth: 4
PointerAlignment: Left

# Brace Wrapping
BraceWrapping:
  AfterCaseLabel: false      # No extra brace wrapping after a `case` label.
  AfterClass: false          # `{` stays on the same line as `class` declaration.
  AfterStruct: false         # `{` stays on the same line as `struct` declaration.
  AfterControlStatement: Never  # `if`, `for`, `while`, etc., keep `{` on the same line.
  AfterEnum: false           # `{` stays on the same line as `enum` declaration.
  AfterFunction: false       # `{` stays on the same line as function definition.
  AfterNamespace: false      # `{` stays on the same line as `namespace` declaration.
  AfterUnion: false          # `{` stays on the same line as `union` declaration.
  AfterExternBlock: false    # `{` stays on the same line as `extern "C"` block.
  BeforeCatch: false         # `catch` stays on the same line as `}` from `try` block.
  BeforeElse: false          # `else` stays on the same line as `}` from `if` block.
  BeforeLambdaBody: false    # `{` stays on the same line as `[]() {` in lambdas.
  IndentBraces: false        # Braces are **not** separately indented.
  SplitEmptyFunction: false  # `{}` for empty functions is kept on **one line**.
  SplitEmptyRecord: false    # `{}` for empty classes/structs/unions is kept on **one line**.
  SplitEmptyNamespace: false # `{}` for empty namespaces is kept on **one line**.

# Control Statements Formatting
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: Inline
AllowShortBlocksOnASingleLine: Empty
BreakBeforeBraces: Attach

# Line Wrapping & Formatting
ColumnLimit: 120
BreakBeforeBinaryOperators: None
BreakBeforeTernaryOperators: true
BreakConstructorInitializers: BeforeColon
AlwaysBreakTemplateDeclarations: Yes

# Class & Namespace Formatting
IndentCaseLabels: true
NamespaceIndentation: None
AccessModifierOffset: -1
EmptyLineBeforeAccessModifier: LogicalBlock

# Function & Parameter Formatting
AlwaysBreakAfterReturnType: None
AllowAllParametersOfDeclarationOnNextLine: false
AllowAllConstructorInitializersOnNextLine: true

# Miscellaneous
SpaceBeforeParens: ControlStatements
ReflowComments: false
SpacesBeforeTrailingComments: 2
SpacesInParentheses: false
SpacesInAngles: false
SpacesInContainerLiterals: false
DerivePointerAlignment: false
